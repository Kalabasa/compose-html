{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2021", "dom"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "dist/cjs",
    "declaration": true,
    "declarationDir": "dist/types",
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "../node_modules/*"]
    },
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
